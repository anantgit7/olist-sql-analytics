OPTIONALLY ENCLOSED BY '"'
LINES TERMINATED BY '\n'
IGNORE 1 ROWS;

-- PRODUCTS
LOAD DATA LOCAL INFILE "F:/ProjectNEW/Ecomdataset/Olist/olist_products_dataset.csv"
