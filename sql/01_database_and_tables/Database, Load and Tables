OPTIONALLY ENCLOSED BY '"'
LINES TERMINATED BY '\n'
IGNORE 1 ROWS;

-- SELLERS
LOAD DATA LOCAL INFILE "F:/ProjectNEW/Ecomdataset/Olist/olist_sellers_dataset.csv"
INTO TABLE sellers
